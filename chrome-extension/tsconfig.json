{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["chrome"],
    "baseUrl": ".",
    "paths": {
      "@tote/schema": ["../src/schema.ts"],
      "@tote/apiKey": ["../src/apiKey.ts"]
    }
  },
  "include": ["src", "../src/schema.ts", "../src/apiKey.ts"]
}
